[BASIC]
good-names=__init__
good-names-rgxs=[a-zA-Z][a-zA-Z0-9_]{1,}
function-rgx=[a-zA-Z][a-zA-Z0-9_]{1,}
method-rgx=[a-zA-Z][a-zA-Z0-9_]{1,}
attr-rgx=[a-zA-Z][a-zA-Z0-9_]{1,}
class-rgx=[a-zA-Z][a-zA-Z0-9_]{1,}
module-rgx=[a-zA-Z][a-zA-Z0-9_]{1,}
variable-rgx=[a-zA-Z_][a-zA-Z0-9_]*

[MASTER]
init-hook="from pylint.config import find_pylintrc; import os, sys; sys.path.append(os.path.dirname(find_pylintrc()))"

[FORMAT]
max-line-length=240

[MESSAGES CONTROL]
disable=
    trailing-whitespace
    missing-module-docstring,
    missing-function-docstring,
    too-few-public-methods,
    too-many-instance-attributes,
    too-many-arguments
